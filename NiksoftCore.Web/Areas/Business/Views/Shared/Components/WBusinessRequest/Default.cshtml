@{
    var allowShow = (bool)ViewBag.AllowView;
    var businessCount = (int)ViewBag.BusinessCount;
}

@if (allowShow)
{
    <div class="row">
        <div class="col-lg-4">
            <div class="card text-center shadow">
                <div class="card-heading">
                    <h4 class="card-title text-muted mb-0">دریافت پنل بازرگانی</h4>
                </div>
                <div class="card-body p-t-10">
                    <p class="text-muted m-b-20 m-t-0"> اگر صاحب کسب و کار هستید می توانید با دریافت پنل بازرگانی از خدمات این قسمت بهرمند شوید</p>
                    <a href="/Panel/LegalForm" class="btn btn-outline-danger btn-full">دریافت پنل</a>
                    <p class="text-muted m-b-0 m-t-20"><b>@businessCount</b> پنل فعال</p>
                </div>
            </div>
        </div>
    </div>
}

