@{
    ViewData["Title"] = "Business Management";
    Layout = "~/Areas/Panel/Views/Shared/_FaLayout.cshtml";
    var contents = (List<NiksoftCore.ITCF.Service.Business>)ViewBag.Contents;
    var pager = (NiksoftCore.Utilities.Pagination)ViewBag.Pager;
    int pageNumber = 0;
}
<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/BusinessManage/Create" class="btn btn-outline-success btn-sm"><i class="fa fa-plus"></i></a>
    </div>
</div>

<br />
<div class="table-responsive">
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th class="text-primary text-center" width="30px">#</th>
                <th class="text-primary text-center">Company Name</th>
                <th class="text-primary text-center">Category</th>
                <th class="text-primary text-center">Contacts</th>
                <th class="text-primary text-center">Business Type</th>
                <th class="text-primary text-center">Location</th>
                <th class="text-primary text-center">Industrail Park</th>
                <th class="text-primary text-center">Address</th>
                <th class="text-primary text-center" width="100px">Oprations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in contents)
            {
                pageNumber++;
                <tr>
                    <td>@(pager.StartIndex + pageNumber)</td>
                    <td>@item.CoName</td>
                    <td>@item.Category.Title</td>
                    <td>
                        <p>Tel: @item.Tel</p>
                        <p>Email: @item.Email</p>
                        <p>Web Site: @item.Website</p>
                    </td>
                    <td>
                        @if (item.BusinessType == NiksoftCore.ITCF.Service.BusinessType.Production)
                        {
                            <span>Production</span>
                        }
                        else
                        {
                            <span>Intermediary</span>
                        }
                    </td>
                    <td>@item.Country.Title - @item.Province.Title - @item.City.Title</td>
                    <td>
                        @if (@item.IndustrialPark != null)
                        {
                            @item.IndustrialPark.Title
                        }
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="/Panel/BusinessManage/Edit/@item.Id?lang=en" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Panel/BusinessManage/Remove/@item.Id?lang=en" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @if (pager.TotalSize > pager.PageSize)
        {
            <ul class="pagination m-b-5">
                <li class="page-item">
                    <a class="page-link" href="@Context.Request.Path?part=1" aria-label="Previous">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </li>

                @for (int i = 1; i <= pager.GetTotalParts(); i++)
                {
                    if (pager.Part == i)
                    {
                        <li class="page-item active"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a href="@Context.Request.Path?part=@i" class="page-link">@i</a></li>
                    }

                }
                <li class="page-item">
                    <a class="page-link" href="@Context.Request.Path?part=@pager.GetTotalParts()" aria-label="Next">
                        <i class="fa fa-angle-left"></i>
                    </a>
                </li>
            </ul>
        }

    </div>
</div>