
@model NiksoftCore.SystemBase.Service.PanelMenu
@{
    ViewData["Title"] = "Create Menu";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="text-right">
    <div class="btn-group">
        <a href="/Panel/PanelMenuManage" class="btn btn-outline-info btn-sm">
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>
<br />
@Html.ValidationSummary()
<form action="/Panel/PanelMenuManage/Edit" method="post">
    <div class="registerdiv">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <div class="form-group">
                    <label for="txtTitle" class="control-label">Title</label>
                    @Html.TextBoxFor(m => m.Title, new { placeholder = "Title", @class = "form-control", @id = "txtTitle" })
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
                <div class="form-group">
                    <label for="txtLink" class="control-label">Link</label>
                    @Html.TextBoxFor(m => m.Link, new { placeholder = "Link", @class = "form-control", @id = "txtLink" })
                    @Html.ValidationMessageFor(m => m.Link)
                </div>
                <div class="form-group">
                    <label for="txtIcon" class="control-label">Icon</label>
                    @Html.TextBoxFor(m => m.Icon, new { placeholder = "Icon", @class = "form-control", @id = "txtIcon" })
                    @Html.ValidationMessageFor(m => m.Icon)
                </div>
                <div class="form-group">
                    <label for="txtController" class="control-label">Module Name</label>
                    @Html.TextBoxFor(m => m.Controller, new { placeholder = "Name", @class = "form-control", @id = "txtController" })
                    @Html.ValidationMessageFor(m => m.Controller)
                </div>
                <div class="form-group">
                    <label for="txtDesc" class="control-label">Description</label>
                    @Html.TextAreaFor(m => m.Description, new { placeholder = "Description", @class = "form-control", @id = "txtDesc", rows = "3" })
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
                @Html.HiddenFor(x => x.Id, new { value = Model.Id })
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>