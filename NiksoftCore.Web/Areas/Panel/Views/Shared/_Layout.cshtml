<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Admin Dashboard" name="description" />
    <meta content="ThemeDesign" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>@ViewData["Title"]</title>

    <link rel="shortcut icon" href="~/templates/dashboard/NikFace/images/favicon.png">
    <link rel="stylesheet" href="~/templates/dashboard/NikFace/plugins/morris/morris.css">
    <link href="~/templates/dashboard/NikFace/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/noty/noty.css" rel="stylesheet">
    <link href="~/lib/noty/themes/sunset.css" rel="stylesheet">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/fontawesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/brands.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/solid.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/plugins/fontawesome/css/regular.min.css" rel="stylesheet" type="text/css">
    <link href="~/templates/dashboard/NikFace/css/style.css" rel="stylesheet" type="text/css">
</head>
<body class="ltr-body fixed-left">
    <script src="~/templates/dashboard/NikFace/js/jquery.min.js"></script>
    <script src="~/lib/noty/noty.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/BaseSystem.js"></script>
    <div id="wrapper">
        <div class="topbar">
            <div class="topbar-left">
                <div class="text-center">
                    <a href="/Panel" class="logo"><img src="~/templates/dashboard/NikFace/images/logo.png" alt="logo-img"></a>
                    <a href="/Panel" class="logo-sm"><img src="~/templates/dashboard/NikFace/images/logo_sm.png" alt="logo-img"></a>
                </div>
            </div>
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <ul class="list-inline menu-left mb-0">
                        <li class="float-left">
                            <button class="button-menu-mobile open-left waves-light waves-effect">
                                <i class="fas fa-bars" style="vertical-align: middle;"></i>
                            </button>
                        </li>
                        <li class="hide-phone app-search float-left d-none">
                            <form role="search" class="navbar-form">
                                <input type="text" placeholder="search..." class="form-control search-bar">
                                <a href="#" class="btn-search"><i class="fa fa-search"></i></a>
                            </form>
                        </li>
                    </ul>

                    <ul class="nav navbar-right float-right list-inline">
                        <li class="dropdown d-none d-sm-block">
                            <a href="#" data-target="#" class="dropdown-toggle waves-effect waves-light notification-icon-box" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-bell"></i> <span class="badge badge-xs badge-danger"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-lg">
                                <li class="text-center notifi-title">Notification <span class="badge badge-xs badge-success">3</span></li>
                                <li class="list-group">
                                    <a href="javascript:void(0);" class="list-group-item">
                                        <div class="media">
                                            <div class="media-heading">Your order is placed</div>
                                            <p class="m-0">
                                                <small>Dummy text of the printing and typesetting industry.</small>
                                            </p>
                                        </div>
                                    </a>
                                    <a href="javascript:void(0);" class="list-group-item">
                                        <div class="media">
                                            <div class="media-body clearfix">
                                                <div class="media-heading">New Message received</div>
                                                <p class="m-0">
                                                    <small>You have 87 unread messages</small>
                                                </p>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="javascript:void(0);" class="list-group-item">
                                        <div class="media">
                                            <div class="media-body clearfix">
                                                <div class="media-heading">Your item is shipped.</div>
                                                <p class="m-0">
                                                    <small>It is a long established fact that a reader will</small>
                                                </p>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="javascript:void(0);" class="list-group-item">
                                        <small class="text-primary">See all notifications</small>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="d-none d-sm-block">
                            <a href="#" id="btn-fullscreen" class="waves-effect waves-light notification-icon-box">
                                <i class="fas fa-compress"></i>
                            </a>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle profile waves-effect waves-light" data-toggle="dropdown" aria-expanded="true">
                                <img src="~/templates/dashboard/NikFace/images/users/avatar-1.jpg" alt="user-img" class="rounded-circle">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-left">
                                <li><a href="javascript:void(0)" class="dropdown-item"> Profile</a></li>
                                <li><a href="javascript:void(0)" class="dropdown-item"><span class="badge badge-success float-right">5</span> Settings </a></li>
                                <li><a href="javascript:void(0)" class="dropdown-item"> Lock screen</a></li>
                                <li class="dropdown-divider"></li>
                                <li><a href="/Auth/Account/Logout" class="dropdown-item"> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <div id="sidebar-menu">
                    <ul>
                        <li>
                            <a href="/Panel" class="waves-effect"><i class="mdi mdi-home"></i><span> Dashboard </span></a>
                        </li>
                    </ul>
                    @await Component.InvokeAsync("WPanelMenu")
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="content-page">
            <div class="content">

                <div class="">
                    <div class="page-header-title">
                        <h4 class="page-title">@ViewBag.PageTitle</h4>
                    </div>
                </div>

                <div class="page-content-wrapper ">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
            </div>

            <footer class="footer">
                © 2016 - 2018 Niksoft group - All Rights Reserved.
            </footer>

        </div>
    </div>
    <script src="~/templates/dashboard/NikFace/js/popper.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/bootstrap.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/modernizr.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/detect.js"></script>
    <script src="~/templates/dashboard/NikFace/js/fastclick.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.slimscroll.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.blockUI.js"></script>
    <script src="~/templates/dashboard/NikFace/js/waves.js"></script>
    <script src="~/templates/dashboard/NikFace/js/wow.min.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.nicescroll.js"></script>
    <script src="~/templates/dashboard/NikFace/js/jquery.scrollTo.min.js"></script>
    <script src="~/templates/dashboard/NikFace/plugins/morris/morris.min.js"></script>
    <script src="~/templates/dashboard/NikFace/plugins/raphael/raphael-min.js"></script>
    @*<script src="~/templates/dashboard/NikFace/pages/dashborad.js"></script>*@
    <script src="~/templates/dashboard/NikFace/js/app.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
